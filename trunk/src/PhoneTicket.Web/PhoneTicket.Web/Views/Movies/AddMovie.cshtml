@model PhoneTicket.Web.Models.Movie

@{
    var Title = "Editar Película";
    var MovieId = Model.Id;
    if (Model == null)
    {
        Title = "Agregar Película";
        MovieId = -1;
    }
    ViewBag.Title = Title;
}

<h2>@Title</h2>

@using (Html.BeginForm("Edit","Movies")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
        <div class="editor-label">
            @Html.HiddenFor(m => m.Id, new { @Value = MovieId })
        </div>

        <fieldset>
        <legend>Log in Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Title)
                @Html.EditorFor(m => m.Title, new { @Value = "" })
            </li>
            <li>
                @Html.LabelFor(m => m.Genre)
                @Html.DropDownList("MovieGenreType")
            </li>
            <li>
                @Html.LabelFor(m => m.DurationInMinutes)
                @Html.EditorFor(m => m.DurationInMinutes, new { @Value = "" })
            </li>
            <li>
                @Html.LabelFor(m => m.Rating)
                @Html.DropDownList("MovieRatingType")
            </li>
            <li>
                @Html.LabelFor(m => m.Synopsis)
                @Html.TextAreaFor(m => m.Synopsis, new { @Value = "" })
            </li>
            <li>
                @Html.LabelFor(m => m.ImageUrl)
                @Html.EditorFor(m => m.ImageUrl, new { @Value = "" })
            </li>
            <li>
                @Html.LabelFor(m => m.TrailerUrl)
                @Html.EditorFor(m => m.TrailerUrl, new { @Value = "" })
            </li>
        </ol>
        <input type="submit" value="Guardar" />
    </fieldset>
}
