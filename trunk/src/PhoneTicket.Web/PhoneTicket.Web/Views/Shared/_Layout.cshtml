@using PhoneTicket.Web.Helpers
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Phone Ticket</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/bootstrap.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="@Url.Content("~/Images/logo.png")" height="50px"/>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Usuarios", "Index", "Users")</li>
                            <li>@Html.ActionLink("Cartelera", "Index", "Movies")</li>
                            <li>@Html.ActionLink("Funciones", "ByMovie", "Shows")</li>
                            <li>@Html.ActionLink("Salas", "Index", "Rooms")</li>
                            <li>@Html.ActionLink("Promociones", "Index", "Discounts")</li>
                            <li>@Html.ActionLink("Reportes", "Index", "Reports")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTimeHelpers.DateTimeInArgentina.Year - PhoneTicket</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
