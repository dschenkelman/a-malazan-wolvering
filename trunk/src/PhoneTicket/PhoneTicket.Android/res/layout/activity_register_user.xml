<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/phoneticker_background"
    tools:context=".RegisterUserActivity" >

 	<LinearLayout 
        android:id="@+id/linearLayout"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:orientation="vertical">

 		<TextView
 		    android:id="@+id/personalDataTitle"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:text="@string/registerUserDataTitle"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/phoneticker_title_text" />
 	    
		<EditText
			android:id="@+id/inputFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputFirstName"
            android:inputType="textPersonName"
	        android:textColor="@color/phoneticker_data_text" />
		
		<EditText
			android:id="@+id/inputLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputLastName"
            android:inputType="textPersonName"
	        android:textColor="@color/phoneticker_data_text" />
		
		<EditText
			android:id="@+id/inputDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputDNI"
            android:inputType="number"
	        android:textColor="@color/phoneticker_data_text" />

		<EditText
			android:id="@+id/inputBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputBirthday"
            android:inputType="date"
	        android:textColor="@color/phoneticker_data_text" />		
				
		<EditText
			android:id="@+id/inputCellPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputCellPhone"
            android:inputType="phone"
	        android:textColor="@color/phoneticker_data_text" />

		<TextView
		    android:id="@+id/accountDataTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/registerUserAccountTitle"
 		    android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/phoneticker_title_text" />

		<EditText
		    android:id="@+id/inputEmail"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:ems="10"
		    android:hint="@string/registerUserInputEmail"
		    android:inputType="textEmailAddress"
	        android:textColor="@color/phoneticker_data_text" />
				
		<EditText
			android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputPassword"
            android:inputType="textPassword"
	        android:textColor="@color/phoneticker_data_text" />
		
		<EditText
			android:id="@+id/inputConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputConfirmPassword"
            android:inputType="textPassword"
	        android:textColor="@color/phoneticker_data_text" />
 	                
		<Button 
		    android:id="@+id/registerButton"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/registerUserRegisterButton"
		    android:onClick="onRegisterButtonAction"
	        android:textColor="@color/phoneticker_button_text" />
      
  	</LinearLayout>

</ScrollView>
