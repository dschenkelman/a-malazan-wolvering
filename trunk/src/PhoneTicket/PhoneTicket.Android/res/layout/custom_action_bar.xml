<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:background="@color/phoneticker_navigation_bar_background"
    android:focusable="true"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/ribbonMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:contentDescription="@string/ribbonMenuButtonDescription"
        android:gravity="center"
        android:src="@drawable/ic_ribbon_menu" />

    <TextView
        android:id="@+id/actionTitle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/ribbonMenuButton"
        android:gravity="left|center_vertical"
        android:text="@string/action_default_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/phoneticker_navigation_bar_text" />

    <ImageButton
        android:id="@+id/twitterButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:contentDescription="@string/twitterButtonDescription"
        android:gravity="center"
        android:paddingRight="4dp"
        android:src="@drawable/ic_gray_twitter" />

    <ImageButton
        android:id="@+id/facebookButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/twitterButton"
        android:background="@null"
        android:contentDescription="@string/facebookButtonDescription"
        android:gravity="center"
        android:paddingRight="4dp"
        android:src="@drawable/ic_gray_facebook" />

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/facebookButton"
        android:background="@null"
        android:contentDescription="@string/calendarButtonDescription"
        android:gravity="center"
        android:paddingRight="4dp"
        android:src="@drawable/ic_gray_calendar" />

</RelativeLayout>