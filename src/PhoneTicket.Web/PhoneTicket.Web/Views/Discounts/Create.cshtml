@model PhoneTicket.Web.ViewModels.DiscountViewModel

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/themes/base/css")

<h2>Agregar promoción</h2>

@using (Html.BeginForm("Create", "Discounts", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Información</legend>
        <label>Descripcion *</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <label>Tipo *</label>
        <div class="editor-field">
            @Html.DropDownListFor(vm => vm.Type, Model.DiscountTypes)
            @Html.ValidationMessageFor(m => m.Type)
        </div>
        
        <label>Valor *</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.Value)
            @Html.ValidationMessageFor(model => model.Value)
        </div>

        <label>Desde *</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <label>Hasta *</label>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <p>
            <input type="submit" value="Agregar" />
        </p>
    </fieldset>
}

<h4> * - Campo Obligatorio</h4>

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/app/CreateDiscount.js")
}
