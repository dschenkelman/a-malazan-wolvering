<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterUserActivity" >

 	<LinearLayout 
        android:id="@+id/linearLayout"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:orientation="vertical">
 	    
		<EditText
			android:id="@+id/inputFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputFirstName"
            android:inputType="textPersonName" />
		
		<EditText
			android:id="@+id/inputLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputLastName"
            android:inputType="textPersonName" />
		
		<EditText
			android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputEmail"
            android:inputType="textEmailAddress" />
		
		<EditText
			android:id="@+id/inputDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputDNI"
            android:inputType="number" />

		<EditText
			android:id="@+id/inputBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputBirthday"
            android:inputType="date" />		
		
		<EditText
			android:id="@+id/inputPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputPhone"
            android:inputType="phone" />
				
		<EditText
			android:id="@+id/inputCellPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputCellPhone"
            android:inputType="phone" />
				
		<EditText
			android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputPassword"
            android:inputType="textPassword" />
		
		<EditText
			android:id="@+id/inputConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registerUserInputConfirmPassword"
            android:inputType="textPassword" />
 	                
		<Button 
		    android:id="@+id/registerButton"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/registerUserRegisterButton"
		    android:onClick="onRegisterButtonAction" />
      
  	</LinearLayout>

</ScrollView>
