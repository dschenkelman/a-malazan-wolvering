<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/userShowIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:src="@drawable/ic_user_show_bought"
        android:contentDescription="@string/userShowImageDescription" />

    <LinearLayout
		android:id="@+id/textLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/userShowIcon" >
        
	    <TextView
	        android:id="@+id/userShowShowTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:padding="1dp"
	        android:textColor="@color/phoneticker_data_text" />
	
	    <TextView
	        android:id="@+id/userShowMovieName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:padding="1dp"
	        android:textColor="@color/phoneticker_title_text" />
	
	    <TextView
	        android:id="@+id/userShowCinemaAddress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
        	android:padding="1dp"
	        android:textColor="@color/phoneticker_data_text" />
        
    </LinearLayout>
			
</RelativeLayout>
